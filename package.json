{
  "name": "serverless-dotenv-docker-plugin",
  "version": "4.0.3",
  "description": "Preload environment variables with dotenv into serverless. Ignores local environment variables unless explicitly requested.",
  "main": "src/index.js",
  "files": [
    "src/**/*"
  ],
  "scripts": {
    "deploy": "publish",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.js\"",
    "test": "nyc --reporter=lcov --reporter=text mocha",
    "posttest": "prettier --ignore-path .gitignore --check \"**/*.js\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nicoandra/serverless-dotenv-plugin.git"
  },
  "keywords": [
    "serverless",
    "dotenv",
    "serverless-plugin"
  ],
  "author": "Colyn Brown <colyn.brown@gmail.com>",
  "contributors": [
    "NMark Tse <mark.tse@neverendingqs.com> (https://neverendingqs.com/)",
    "Nicolas Andrade <nico@nmac.com.ar> (https://nmac.com.ar/)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nicoandra/serverless-dotenv-plugin/issues"
  },
  "homepage": "https://github.com/nicoandra/serverless-dotenv-plugin#readme",
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^8.0.3"
  },
  "devDependencies": {
    "chai": "^4.3.6",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "prettier": "^2.7.1",
    "proxyquire": "^2.1.3",
